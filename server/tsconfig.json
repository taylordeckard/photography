{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "es6",
		"paths": {
			"*": [
				"node_modules/*"
			],
			"@app/*": ["src/*"]
		},
		"lib": [
			"dom",
			"es6",
			"es2015"
		]
	},
	"include": [
		"src"
	]

}
